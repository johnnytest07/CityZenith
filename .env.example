# Ibex Enterprise API key (server-side only — never expose to client)
IBEX_API_KEY=

# Ibex Enterprise base URL
IBEX_BASE_URL=https://api.ibexenterprise.com

# MapTiler API key (for OSM-based 3D vector tiles)
NEXT_PUBLIC_MAPTILER_KEY=your_maptiler_key_here

# Google Gemini API key — used by the intelligence layer for embeddings and insights
# (server-side only — never expose to client)
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Atlas connection string — used by the council intelligence layer
# Format: mongodb+srv://<user>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_connection_string_here
MONGODB_DB=cityzenith
